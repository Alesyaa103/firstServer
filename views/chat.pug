<!DOCTYPE html>
html(lang="en")
    head
        meta(charset="UTF-8")
        meta(name="viewport", content="width=device-width, initial-scale=1.0")
        meta(http-equiv="X-UA-Compatible", content="ie=edge")
        link(rel="stylesheet", href="https://fonts.googleapis.com/css?family=Roboto&display=swap")
        link(rel="stylesheet", href="https://fonts.googleapis.com/css?family=Exo+2|Roboto&display=swap")
        link(rel="stylesheet", href="https://use.fontawesome.com/releases/v5.8.2/css/all.css")
        link(rel="stylesheet", href="./css/main.css")
        title Document
    body
        main.main
            aside.sidebar
                ul
                    li.logo
                    li.sidebar__item
                        a(href="###")
                            img(src="./img/icon-3.svg", alt="")
                            img.img(src="./img/date.svg", alt="")
                    li.sidebar__item
                        a(href="personal.html")
                            img(src="./img/myprofile.svg", alt="")
                    li.sidebar__item
                        a(href="###")
                            img(src="./img/handyman-tools.svg", alt="")
                    li.sidebar__item
                        a(href="###")
                            img(src="./img/team.svg", alt="")
                    li.sidebar__item.active
                        a(href="###")
                            img(src="./img/messages.svg", alt="")
            .container
                header.header
                    .linetop
                        .burger
                            .burger__line
                            .burger__line
                            .burger__line
                        a.linetop__words(href="###") Home
                        img.linetop__element(src="./img/Vector.svg", alt="")
                        a.linetop__words(href="###") Network
                    .profile
                        a.profile__link(href="###")
                            img(src="./img/profile.svg", alt="")
                            p.linetop__words Sarah Freeman
                        img(src="./img/Shape.svg", alt="")
                section.wraper
                    ul.chats
                        include mixins/friend.pug
                    .dialog
                        .search
                            img.search__button(src="./img/search.svg", alt="")
                            input.search__input(type="text" placeholder="Search message...")
                        ul.messages
                            li.today Today, 17.03.2018
                            include mixins/message.pug
                        .write
                            input.write__input(type="text" placeholder="Write a message...")
                            .write__images
                                img(src="./img/smile.svg", alt="")
                                img(src="./img/paperclip.svg", alt="")
                                button.send
                                    img(src="./img/img2.svg", alt="")
                                    img.img__elem(src="./img/img1.svg", alt="")
        script(src="./js/burger.js")
        script(src="./js/line.js")