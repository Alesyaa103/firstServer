extends layout/base.pug
block variables
    -const linkInHeader="/signUp1.html"
    -const linkDescription="Sign up"
    -const question="Do not have an account?"
    -const title="Sign In"
block content
    section.content
        .container
            form.send(action="/log-in" method="POST")
                legend.send__name Sing In
                input(placeholder="E-mail" type="email" name="email")
                input(type="password" placeholder="Password" name='password')
                a.send__link(href="###") Forgot password?
                div.send__button
                    button(type="submit") Sign in


